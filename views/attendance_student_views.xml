<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="attendance_tree_view" model="ir.ui.view">
            <field name="name">Attendance</field>
            <field name="model">attendance.student</field>
            <field name="arch" type="xml">
                <tree expand="1" string="Attendance" decoration-success="state == 'done'">
                    <field name="name" />
                    <field name="student_id" />
                    <field name="date" />
                    <field name="subject_id" />
                    <field name="semester" />
                    <field name="state" widget="badge" />
                </tree>
            </field>
        </record>

        <record id="attendance_student_form_view" model="ir.ui.view">
            <field name="name">attendance_form_view</field>
            <field name="model">attendance.student</field>
            <field name="arch" type="xml">
                <form string="Attendance">
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable':'0'}"></field>
                        <button name="done_action" type="object"
                            string="Done" />
                        <button name="%(attendance_subject_action)d" type="action"
                            string="Subjects" />
                        <button name="%(attendance_faculty_action)d" type="action"
                            string="Faculty" />
                        <button name="%(attendance_department_action)d" type="action"   
                            string="Department" />
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Done" bg_color="bg-success"
                            attrs="{'invisible': [('state', '!=', 'done')]}"></widget>
                        <label for="name">Name</label>
                        <h1>
                            <field name="name" />
                        </h1>
                        <group>
                            <group>
                                <field name="course_id" />
                                <field name="student_id" />
                                <field name="year" />
                                <field name="semester" />
                            </group>
                            <group>
                                <field name="date" />
                                <field name="subject_id" options="{'no_create':True,'no_open': True}"/>
                                <field name="faculty_id" options="{'no_create':True,'no_open': True}"/>
                                <field name="email" widget="email" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Department">
                                <group>
                                    <field name="department_name_id" options="{'no_create':True,'no_open': True}"></field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="message_ids" />
                        <field name="activity_ids" />
                    </div>
                </form>
            </field>
        </record>

        <record id="attendance_student_search_view" model="ir.ui.view">
            <field name="name">Student Search</field>
            <field name="model">attendance.student</field>
            <field name="arch" type="xml">
                <search string="Student Search">
                    <field name="name" />
                    <field name="student_id" />
                    <field name="year" />
                    <field name="semester" />
                    <field name="faculty_id" />
                    <field name="department_name_id" />
                    <filter name="date" string="Current Date"
                        domain="[('date','=',datetime.datetime.now())]" />
                    <separator />
                    <filter string="Archived" name="active" domain="[('active', '=', False)]" />
                    <group string="Department">
                        <filter name="year" string="Year" context="{'group_by':'year'}" />
                        <separator />
                        <filter name="semester" string="Semester" context="{'group_by':'semester'}" />
                        <separator />
                        <filter name="department_name_id" string="Department"
                            context="{'group_by':'department_name_id'}" />
                        <separator />
                        <filter string="Subject" name="subject_id" context="{'group_by':'subject_id'}" />
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>